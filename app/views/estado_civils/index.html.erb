<h1>Listing Estado Civils</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estado_civils.each do |estado_civil| %>
      <tr>
        <td><%= estado_civil.nombre %></td>
        <td><%= estado_civil.descripcion %></td>
        <td><%= link_to 'Show', estado_civil %></td>
        <td><%= link_to 'Edit', edit_estado_civil_path(estado_civil) %></td>
        <td><%= link_to 'Destroy', estado_civil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

